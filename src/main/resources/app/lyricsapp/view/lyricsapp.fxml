<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.lyricsapp.controller.LyricsAppController">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="Home" />
                <Menu mnemonicParsing="false" text="Search">
                    <MenuItem mnemonicParsing="false" onAction="#searchByArtistAndTitle" text="By Artist And Title" />
                    <MenuItem mnemonicParsing="false" onAction="#searchByLyrics" text="By Lyrics" />
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#help" text="About LyricsApp"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <AnchorPane fx:id="rootPane" maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <children>
                <Button layoutX="106.0" layoutY="109.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="428.0" onAction="#searchByArtistAndTitle" text="Search By Artist And Title">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
                <Button layoutX="106.0" layoutY="229.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="428.0" onAction="#searchByLyrics" text="Search By Lyrics">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </children>
</VBox>
