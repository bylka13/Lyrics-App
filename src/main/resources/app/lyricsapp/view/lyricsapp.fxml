<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.lyricsapp.controller.LyricsAppController">
    <top>

        <VBox prefHeight="280.0" prefWidth="900.0" spacing="10.0">
            <HBox spacing="10.0">
                <Label fx:id="LyricsTitle" alignment="CENTER" prefHeight="74.0" prefWidth="900.0" text="LYRICS APP">
                    <font>
                        <Font name="Corbel" size="25.0" />
                    </font>
                </Label>
            </HBox>
            <Separator fx:id="separator" orientation="HORIZONTAL" prefHeight="70.0" prefWidth="900.0" />
            <HBox fx:id="searchBlock" prefHeight="183.0" prefWidth="900.0" spacing="20.0">
                <VBox prefHeight="202.0" prefWidth="269.0" spacing="10.0">
                    <Label text="Artist:">
                        <font>
                            <Font size="16.0" />
                        </font></Label>
                    <TextField fx:id="inputArtist" promptText="Enter The Name Of Your Artist">
                        <font>
                            <Font size="18.0" />
                        </font></TextField>
                    <Label text="Title:">
                        <font>
                            <Font size="16.0" />
                        </font></Label>
                    <TextField fx:id="inputTitle" prefHeight="43.0" prefWidth="209.0" promptText="Enter Your Song Title">
                        <font>
                            <Font size="20.0" />
                        </font></TextField>
                    <VBox alignment="CENTER">
                        <Button fx:id="searchLyricDirectButton" text="Search" textAlignment="CENTER">
                            <tooltip>
                                <Tooltip text="Click To Search Songs By Artist And Title" />
                            </tooltip>
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>
                    </VBox>
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>

                </VBox>
                <Separator orientation="VERTICAL">
                    <padding>
                        <Insets top="-14.0" />
                    </padding></Separator>
                <VBox prefHeight="195.0" prefWidth="267.0" spacing="10.0">
                    <VBox alignment="CENTER" prefHeight="70.0" prefWidth="272.0">
                        <HBox>
                            <Label prefHeight="26.0" prefWidth="139.0" text="Number of results:">
                                <HBox.margin>
                                    <Insets top="5.0" />
                                </HBox.margin>
                                <font>
                                    <Font size="16.0" />
                                </font></Label>
                            <Label fx:id="resultsLabel" />
                            <Spinner fx:id="numberOfResults" initialValue="1" prefHeight="31.0" prefWidth="55.0" />
                        </HBox>
                    </VBox>
                    <Label text="Lyrics:">
                        <font>
                            <Font size="16.0" />
                        </font></Label>
                    <TextField fx:id="inputLyrics" promptText="Enter Your Song Lyrics">
                        <font>
                            <Font size="18.0" />
                        </font></TextField>
                    <Button fx:id="searchLyricTextButton" text="Search">
                        <tooltip>
                            <Tooltip text="Click To Search Songs By Lyrics" />
                        </tooltip>
                        <VBox.margin>
                            <Insets left="65.0" />
                        </VBox.margin>
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Button>
                    <HBox.margin>
                        <Insets bottom="10.0" left="19.0" right="10.0" top="10.0" />
                    </HBox.margin>
                </VBox>
                <Separator orientation="VERTICAL" prefHeight="195.0" prefWidth="0.0">
                    <padding>
                        <Insets top="-14.0" />
                    </padding></Separator>
                <VBox prefHeight="30.0" prefWidth="180.0" spacing="10.0">

                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                    <children>
                        <Button fx:id="myFavButton" prefHeight="97.0" prefWidth="187.0" text="List Of Favorites">
                            <tooltip>
                                <Tooltip text="Click To Display Your Favorites" />
                            </tooltip>
                        </Button>
                        <Button fx:id="helpButton" prefHeight="97.0" prefWidth="187.0" text="Help">
                            <tooltip>
                                <Tooltip text="Click To Get Help" />
                            </tooltip>
                        </Button>
                    </children>
                </VBox>
                <BorderPane.margin>
                    <Insets />
                </BorderPane.margin>
            </HBox>
        </VBox>
    </top>
    <left>
        <ScrollPane prefHeight="450.0" prefWidth="900.0" BorderPane.alignment="CENTER">
            <content>
                <GridPane fx:id="gridPane" prefHeight="450.0" prefWidth="900.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                </GridPane>
            </content>
        </ScrollPane>
    </left>
</BorderPane>